#!/usr/bin/env python3

from player import Player
import monster as m
from utils import ask
def helpmenu():
    print("Soon to be help menu!")


class Game():
    def __init__(self):
        print('Welcome to the game')
        self.player=Player()
    
    def run(self):
        while True:
            self.player.show_stats()
            action=input("What do you wanna do? (Type in 'h' to load the help menu.)")
            if action=="stats":
                self.player.show_stats()
            elif action=="save":
                pass
            elif action=="exit":
                input("Bye!")
                exit()
            elif action=="monster":
                count=1
            elif action=="h":
                helpmenu()
            else:
                print("Unknown Command.")
    
    
    def pick_monster(self):
        count=1
        for monster in m.monsters:
            pickstr=c.base3+"{}. "+c.random_color()+"{}"+c.reset
            print(pickstr.format(count,monster.title))
            monster.show_stats()
                
    def handle_battle(self):
        while self.player.hp > 0 and self.monster.hp > 0:
            get_player_move()
            if self.player.speed >= self.monster.speed:
                self.player.do(move)
                self.monster.do()
            else:
                self.monster.do()
                self.player.do(move)
        if self.player.hp > 0:     #WIN!
            self.player.xp +=self.monster.xp
        else:
            self.player.hp -=self.monster.xp
    def save(self):
        self.player.save()
        print("Player State Saved.")


if __name__=='__main__':
    agame=Game()
    agame.run()
